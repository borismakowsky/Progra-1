// suma de cuadrados.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main ()

{
	float i;
	int n,s;
	cout<<"Ingrese el valor de n"<<endl;
	cin>>n;
	s=0;
	i=1;
	for (i=1;i<=n;i++)
	{
		s=s+pow(i,2);
	}
	cout<<"El resultado de la suma es: "<<s<<endl; 

	getch();

}
