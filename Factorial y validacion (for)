// factorial y validacion.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main ()

{
	int factorial,i,n;
	factorial=1;
	do {
		cout<<"Ingrese el valor de n";
		cin>>n;
	} while(n<0);  //La condicion debe contemplar los valores incorrectos...negar Ã±a condicion correcta

	for (i=2;i<=n;i++)
		factorial=factorial*i;
		cout<<"El factorial de "    <<n<<"es:  "<<factorial;
	getch();

}
